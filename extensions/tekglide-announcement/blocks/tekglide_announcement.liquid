      "default": " welcome to the shop "
    },
    {
      "type": "select",
      "id": "announcement_text_align",
      "label": "Announcement Text Align",
      "default": "center",
      "options": [ 
        {
          "label": "Left",
          "value": "left"
        },
        {
          "label": "Center",
          "value": "center"
        },
        
        {
          "label": "Right",
          "value": "right"
        }
      ]
    },
    
    {
      "type": "color",
      "id": "colour",
      "label": "Text Colour",
      "default": "#ff0000"
    },
    {
      "type": "color",
      "id": "bgcolor",
      "label": "Announcement Background Color",
      "default": "#ffffff"
    },
    {
      "type": "number",
      "id": "announcement_text_size",
      "label": "Announcement Text Size",
      "default": 16
    },
    {
      "type": "color",
      "id": "announcement_text_color",
      "label": "Announcement Text Color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "announcement_text_style",
      "label": "Announcement Text Style",
      "default": "normal",
      "options": [
