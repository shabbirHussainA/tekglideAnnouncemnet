      "label": "addButton",
      "default": true
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "number",
      "id": "button_padding",
      "label": "Button Padding",
      "default": 10
    },
    {
      "type": "number",
      "id": "button_margin",
      "label": "Button Margin",
      "default": 10
    },
    {
      "type": "number",
      "id": "button_txt_size",
       "label": "button text",
       "default": 16,
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#ff0000"
    },
    {
      "type": "color",
      "id": "button_background_color",
